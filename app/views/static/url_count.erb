<header>
<h1>Links</h1>
</header>

<table border="1" style ="width:100%" margin-left: auto; margin-right: auto;>
        
    <% if @urls %>
        <% @urls.each do |x| %>
            <tr>
                <td><a href="/<%=x.short_url %>"><%=x.short_url %></a></td>
                <td><a href="/delete/<%=x.short_url%>">delete</a></td>
                <td><a href="/<%=x.long_url %>"><%=x.long_url %></a></td>
                <br>
                <td><a href="/count"> Show Link Count: <%=x.counter %></a><td>
            </tr>
        <% end  %>
    <%end %>

</table>
